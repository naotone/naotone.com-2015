global-reset()

vertical-align(position=-50%)
  position relative
  top 50%
  transform translateY(position)

replaceImage(image_name, extention=png)
  image = imgPath + image_name + '.' + extention
  image2x = imgPath + image_name + '@2x.' + extention
  background: url(image) no-repeat center center
  background-size: image-size(image)
  width: image-size(image)[0]
  height: image-size(image)[1]
  hide-text()
  @media all and (-webkit-min-device-pixel-ratio : 1.5), all and (min-device-width: 768px) and (max-device-width: 1024px)
    background url(image2x) no-repeat center center
    background-size image-size(image)
    width image-size(image)[0]
    height image-size(image)[1]
    hide-text()

replaceImageNotRetina(image_name, extention=png)
  image = imgPath + image_name + '.' + extention
  image2x = imgPath + image_name + '@2x.' + extention
  background: url(image) no-repeat center center
  background-size: image-size(image)
  width: image-size(image)[0]
  height: image-size(image)[1]
  hide-text()



@import 'ColorAndType.styl'

img
